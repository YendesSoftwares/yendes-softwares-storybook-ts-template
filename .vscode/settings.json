{
    // Activitus Bar Configuration
    "activitusbar.views": [
        {
            "name": "explorer",
            "codicon": "explorer-view-icon"
        },
        {
            "name": "search",
            "codicon": "search-view-icon"
        },
        {
            "name": "scm",
            "codicon": "source-control-view-icon"
        },
        {
            "name": "debug",
            "codicon": "run-view-icon"
        },
        {
            "name": "extensions",
            "codicon": "extensions-view-icon"
        },
        {
            "name": "extension.project-manager",
            "codicon": "folder"
        },
        {
            "name": "extension.thunder-client",
            "codicon": "symbol-event"
        }
    ],
    // Bracket pair coloraized configuration
    "brackets-pair-colorized-2.colors": [
        "#fafafa",
        "#9f51b6",
        "#f7c244",
        "#f07850",
        "#9cdd29",
        "#0098fa"
    ],
    // Eslint
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    // Material Icon theme
    "material-icon-theme.folders.associations": {
        "buttons": "include",
        "documentations": "docs",
        "eslint-config-custom": "ngrx-actions",
        "info": "lua",
        "tsconfig": "typescript",
        "vscode": "vscode",
        // Special
        "Button00001": "react-components"
    },
    "material-icon-theme.files.associations": {
        "*.doc.md": "document",
        "*.hook.tsx": "svgr",
        "css-data.json": "vscode",
        "extensions.json": "vscode",
        "info.md": "shaderlab",
        "main.ts": "parcel",
        "preview.ts": "storybook",
        "rules.md": "asciidoc",
        "settings.json": "vscode"
    },
    // Peacok Configuration
    "peacock.color": "#ff4785",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#ff7aa7",
        "activityBar.background": "#ff7aa7",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#abff80",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#ff7aa7",
        "statusBar.background": "#ff4785",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#ff1463",
        "statusBarItem.remoteBackground": "#ff4785",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#ff4785",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#ff478599",
        "titleBar.inactiveForeground": "#15202b99"
    },
    // SynthWave 84 Vscode Theme Configuration
    "synthwave84.brightness": 0.45,
    "synthwave84.disableGlow": false,
    // Terminal integrated
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "terminal.integrated.fontSize": 13,
    // Todo Hightlight Extension
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywords": [
        {
            "text": "@Test",
            "color": "#ffffff",
            "backgroundColor": "#42b391",
            "overviewRulerColor": "grey"
        },
        {
            "text": "@Doc",
            "color": "#ffffff",
            "backgroundColor": "#006ba6",
            "overviewRulerColor": "grey"
        },
        {
            "text": "@Done",
            "color": "#ffffff",
            "backgroundColor": "#499167",
            "overviewRulerColor": "grey"
        }
    ],
    "todohighlight.include": [
        "**/*.css",
        "**/*.html",
        "**/*.js",
        "**/*.jsx",
        "**/*.md",
        "**/*.php",
        "**/*.scss",
        "**/*.ts",
        "**/*.tsx"
    ],
    "todohighlight.exclude": [
        "**/_output/**",
        "**/.github/**",
        "**/.next/**",
        "**/.vscode/**",
        "**/*.map",
        "**/*.min.*",
        "**/bower_components/**",
        "**/build/**",
        "**/dist/**",
        "**/node_modules/**"
    ],
    // Vscode Editor
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
    },
    "editor.fontFamily": "'Victor Mono', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.fontWeight": "bold",
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    // Vscode Features
    "editor.stickyTabStops": true,
    "editor.stickyScroll.enabled": true,
    // Vscode Workbench
    "workbench.activityBar.visible": true
}